rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to validate image types
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Helper function to check file size
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024; // 5MB max
    }
    
    // Gallery photos
    match /galleries/{galleryId}/{filename} {
      // Public read for all photos
      allow read: if true;
      
      // Authenticated users can upload with restrictions
      allow write: if request.auth != null
        && isImage()
        && isValidSize()
        && request.resource.contentType in ['image/jpeg', 'image/jpg', 'image/png', 'image/webp'];
      
      // Only the uploader can delete their own photos (filename starts with their uid)
      allow delete: if request.auth != null
        && filename.matches(request.auth.uid.concat('.*'));
    }
    
    // User profile photos
    match /users/{userId}/profile/{filename} {
      allow read: if true;
      allow write: if request.auth != null
        && request.auth.uid == userId
        && isImage()
        && request.resource.size < 2 * 1024 * 1024; // 2MB for profile pics
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
